<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/base"
    android:layout_marginEnd="@dimen/base">

    <ImageView
        android:id="@+id/albumImageView"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/music_placeholder" />

    <TextView
        android:id="@+id/albumNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@color/textColorDark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/albumImageView"
        app:layout_constraintStart_toStartOf="@id/albumImageView"
        app:layout_constraintTop_toBottomOf="@id/albumImageView"
        tools:text="Skins" />

    <ImageButton
        android:id="@+id/saveAlbumButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/save_button_background"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@drawable/ic_save_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/albumImageView"
        app:layout_constraintEnd_toEndOf="@id/albumImageView"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@id/albumImageView"
        app:layout_constraintTop_toTopOf="@+id/albumImageView"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/albumSingerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@color/textColorDark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/albumImageView"
        app:layout_constraintStart_toStartOf="@id/albumImageView"
        app:layout_constraintTop_toBottomOf="@id/albumNameTextView"
        tools:text="Somebody" />
</androidx.constraintlayout.widget.ConstraintLayout>